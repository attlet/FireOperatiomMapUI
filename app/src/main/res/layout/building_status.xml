<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#eeeeee"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#ff0000"
            android:gravity="center"
            android:text="육거리종합시장 현황"
            android:textColor="#fff"
            android:textSize="20dp"
            android:fontFamily="@font/naver_font"/>
    </LinearLayout>


    <LinearLayout
        android:padding="3dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/naver_font"
            android:gravity="center"
            android:text="▣ 위치 : 청주시 상당구 육거리종합시장 일원"
            android:textColor="#000"
            android:textSize="17dp" />

        <TextView
            android:id="@+id/area"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:fontFamily="@font/naver_font"
            android:gravity="center"
            android:text="▣ 면적 : 약 95,000m^2"
            android:textColor="#000"
            android:textSize="17dp" />

        <TextView
            android:id="@+id/building_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/naver_font"
            android:gravity="center"
            android:text="▣ 건축물 현황"
            android:textColor="#000"
            android:textSize="17dp" />

        <TextView
            android:id="@+id/building_status2"
            android:layout_width="match_parent"
            android:layout_height="17dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/naver_font"
            android:text="● 건축물/점포 : 280/794개소, 좌판 55개소"
            android:textColor="#000"
            android:autoSizeTextType="uniform"
            android:autoSizeMinTextSize="12sp"
            android:autoSizeMaxTextSize="17sp"
            android:autoSizeStepGranularity="1sp" />

    </LinearLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="5dp"
        >

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:text=" 계 "
                android:textSize="19dp"
                android:fontFamily="@font/naver_font"
                android:padding="1dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#000"
                android:background="@drawable/cell_shape"
                android:gravity="center"/>

            <TextView
                android:text="판매"
                android:textSize="19dp"
                android:fontFamily="@font/naver_font"
                android:padding="1dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#000"
                android:background="@drawable/cell_shape"
                android:gravity="center"/>

            <TextView
                android:text="식품"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="19dp"
                android:fontFamily="@font/naver_font"
                android:padding="1dp"
                android:textColor="#000"
                android:background="@drawable/cell_shape"
                android:gravity="center"/>

            <TextView
                android:text="다중"
                android:textSize="19dp"
                android:fontFamily="@font/naver_font"
                android:padding="1dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#000"
                android:background="@drawable/cell_shape"
                android:gravity="center"/>

            <TextView
                android:text="주택"
                android:textSize="19dp"
                android:fontFamily="@font/naver_font"
                android:padding="1dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#000"
                android:background="@drawable/cell_shape"
                android:gravity="center"/>

            <TextView
                android:text="기타"
                android:textSize="19dp"
                android:fontFamily="@font/naver_font"
                android:padding="1dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#000"
                android:background="@drawable/cell_shape"
                android:gravity="center"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/Building_total"
                android:text="0"
                android:textSize="19dp"
                android:fontFamily="@font/naver_font"
                android:padding="1dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#000"
                android:background="@drawable/cell_shape"
                android:gravity="center"/>

            <TextView
                android:id="@+id/Building_sale"
                android:text="1"
                android:textSize="19dp"
                android:fontFamily="@font/naver_font"
                android:padding="1dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#000"
                android:background="@drawable/cell_shape"
                android:gravity="center"/>

            <TextView
                android:id="@+id/Building_food"
                android:text="2"
                android:textSize="19dp"
                android:fontFamily="@font/naver_font"
                android:padding="1dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#000"
                android:background="@drawable/cell_shape"
                android:gravity="center"/>

            <TextView
                android:id="@+id/Building_multiple"
                android:text="3"
                android:textSize="19dp"
                android:fontFamily="@font/naver_font"
                android:padding="1dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#000"
                android:background="@drawable/cell_shape"
                android:gravity="center"/>

            <TextView
                android:id="@+id/Building_house"
                android:text="4"
                android:textSize="19dp"
                android:fontFamily="@font/naver_font"
                android:padding="1dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#000"
                android:background="@drawable/cell_shape"
                android:gravity="center"/>

            <TextView
                android:id="@+id/Building_the_other"
                android:text="5"
                android:textSize="19dp"
                android:fontFamily="@font/naver_font"
                android:padding="1dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#000"
                android:background="@drawable/cell_shape"
                android:gravity="center"/>
        </TableRow>


    </TableLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/arcade_status"
            android:layout_width="match_parent"
            android:layout_height="17dp"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/naver_font"
            android:text=" ● 아케이드 구역내 점포 현황"
            android:textColor="#000"
            android:autoSizeTextType="uniform"
            android:autoSizeMinTextSize="12sp"
            android:autoSizeMaxTextSize="17sp"
            android:autoSizeStepGranularity="1sp" />

    </LinearLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="5dp">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:text=" 계 "
                android:textSize="19dp"
                android:fontFamily="@font/naver_font"
                android:padding="1dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#000"
                android:background="@drawable/cell_shape"
                android:gravity="center"/>

            <TextView
                android:text="판매"
                android:textSize="19dp"
                android:fontFamily="@font/naver_font"
                android:padding="1dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#000"
                android:background="@drawable/cell_shape"
                android:gravity="center"/>

            <TextView
                android:text="식품"
                android:textSize="19dp"
                android:fontFamily="@font/naver_font"
                android:padding="1dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#000"
                android:background="@drawable/cell_shape"
                android:gravity="center"/>

            <TextView
                android:text="다중"
                android:textSize="19dp"
                android:fontFamily="@font/naver_font"
                android:padding="1dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#000"
                android:background="@drawable/cell_shape"
                android:gravity="center"/>

            <TextView
                android:text="주택"
                android:textSize="19dp"
                android:fontFamily="@font/naver_font"
                android:padding="1dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#000"
                android:background="@drawable/cell_shape"
                android:gravity="center"/>

            <TextView
                android:text="기타"
                android:textSize="19dp"
                android:fontFamily="@font/naver_font"
                android:padding="1dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#000"
                android:background="@drawable/cell_shape"
                android:gravity="center"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/Arcade_total"
                android:text="0"
                android:textSize="19dp"
                android:fontFamily="@font/naver_font"
                android:padding="1dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#000"
                android:background="@drawable/cell_shape"
                android:gravity="center"/>

            <TextView
                android:id="@+id/Arcade_sale"
                android:text="1"
                android:textSize="19dp"
                android:fontFamily="@font/naver_font"
                android:padding="1dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#000"
                android:background="@drawable/cell_shape"
                android:gravity="center"/>

            <TextView
                android:id="@+id/Arcade_food"
                android:text="2"
                android:textSize="19dp"
                android:fontFamily="@font/naver_font"
                android:padding="1dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#000"
                android:background="@drawable/cell_shape"
                android:gravity="center"/>

            <TextView
                android:id="@+id/Arcade_multiple"
                android:text="3"
                android:textSize="19dp"
                android:fontFamily="@font/naver_font"
                android:padding="1dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#000"
                android:background="@drawable/cell_shape"
                android:gravity="center"/>

            <TextView
                android:id="@+id/Arcade_building"
                android:text="4"
                android:textSize="19dp"
                android:fontFamily="@font/naver_font"
                android:padding="1dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#000"
                android:background="@drawable/cell_shape"
                android:gravity="center"/>

            <TextView
                android:id="@+id/Arcade_the_other"
                android:text="5"
                android:textSize="19dp"
                android:fontFamily="@font/naver_font"
                android:padding="1dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#000"
                android:background="@drawable/cell_shape"
                android:gravity="center"/>
        </TableRow>


    </TableLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/finish_button"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#00000000"
            android:gravity="center"
            android:text="확인"
            android:onClick="mOnClose"
            android:textColor="#ff7a00"
            android:textSize="20dp"
            android:fontFamily="@font/naver_font"/>

    </LinearLayout>


</LinearLayout>
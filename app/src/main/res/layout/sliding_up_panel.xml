<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/slidingUpPanel"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="88dp"
    android:layout_weight="1.0"
    android:background="#FFFFFF"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/dragView"
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <View
            android:id="@+id/view"
            android:layout_width="60dp"
            android:layout_height="5dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:background="@drawable/round_border" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/fireplug_border"
            android:paddingStart="5dp"
            android:paddingTop="5dp"
            android:paddingEnd="5dp"
            android:paddingBottom="5dp">

            <TextView
                android:id="@+id/icon_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"

                android:drawableTop="@drawable/fireplug"
                android:fontFamily="sans-serif-black"
                android:text="소화전"
                android:textColor="#000000"
                android:textSize="8sp" />

            <TextView
                android:id="@+id/icon_text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="40dp"
                android:layout_toRightOf="@id/icon_text"
                android:drawableTop="@drawable/fireplug2"
                android:fontFamily="sans-serif-black"
                android:text="소화전(+함)"
                android:textColor="#000000"
                android:textSize="8sp" />

        </RelativeLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="280dp"
            android:layout_marginTop="7dp"
            android:layout_marginRight="15dp"
            android:orientation="vertical"
            android:background="@drawable/fireplug_border"
            android:paddingStart="5dp"
            android:paddingTop="5dp"
            android:paddingEnd="5dp"
            android:paddingBottom="5dp"
            >


            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/long_red_square"
                android:fontFamily="sans-serif-black"
                android:text=" : [협소구간] 중앙10호"
                android:textColor="#000000"
                android:textSize="7sp" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/long_blue_square"
                android:fontFamily="sans-serif-black"
                android:text=" : 중형펌프 진입 가능"
                android:textColor="#000000"
                android:textSize="7sp" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/long_gray_square"
                android:fontFamily="sans-serif-black"
                android:text=" : 아케이드 설치 구간"
                android:textColor="#000000"
                android:textSize="7sp" />
        </LinearLayout>


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#B1BCBE" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF" />
</LinearLayout>